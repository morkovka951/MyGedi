<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.user.mygedi.ActivityAdd">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llHeaderActivAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_header_add_activity"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ibArrowBackActivAdd"
                android:layout_width="24dp"
                android:layout_height="27dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_arrow_left_activity_add" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/create_a_new_task"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7sp">

            <LinearLayout
                android:id="@+id/llNameYourTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llHeaderActivAdd"
                android:background="@drawable/name_your_task_activ_add1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivNameYourTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_name_your_task" />

                <EditText
                    android:id="@+id/etNameYourTask"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/name_your_task"
                    android:maxLength="25"
                    android:paddingRight="50dp"
                    android:textColorHint="#55514f"
                    android:textSize="21dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/llNameYourTask"
                android:layout_marginTop="5dp"
                android:background="@drawable/description_activ_add1"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/description"
                    android:maxLength="200"
                    android:textColorHint="#55514f"
                    android:textSize="21dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llDescription"
                android:layout_marginTop="5dp"
                android:background="@drawable/name_your_task_activ_add1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_place_activ_add" />

                <EditText
                    android:id="@+id/etPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/place"
                    android:maxLength="25"
                    android:textColorHint="#55514f"
                    android:textSize="21dp" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_icons_google_maps" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAllDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llPlace"
                android:layout_marginTop="5dp"
                android:background="@drawable/name_your_task_activ_add1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivAllDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_all_day_activ_add" />

                <EditText
                    android:id="@+id/etAllDay"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/all_day"
                    android:maxLength="25"
                    android:textColorHint="#55514f"
                    android:textSize="21dp" />

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/sbAllDay"
                    style="@style/SwitchButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:kswBackColor="#ffffff"
                    app:kswBackMeasureRatio="2.2"
                    app:kswThumbHeight="16dp"
                    app:kswThumbWidth="16dp"
                    app:kswTintColor="#1cb83a" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDayTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llAllDay"
                android:layout_marginTop="5dp"
                android:background="@drawable/description_activ_add1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/from" />

                <Button
                    android:id="@+id/btDayTo"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="To"
                    android:textAllCaps="false"
                    android:textColor="#55514f"
                    android:textSize="21dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="15sp"
                    app:srcCompat="@drawable/ic_navigate_next_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDayFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llDayTo"
                android:layout_marginTop="5dp"
                android:background="@drawable/description_activ_add1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/to" />

                <Button
                    android:id="@+id/btDayFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="From"
                    android:textAllCaps="false"
                    android:textColor="#55514f"
                    android:textSize="21dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="15sp"
                    app:srcCompat="@drawable/ic_navigate_next_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAssignTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llDayFrom"
                android:layout_marginTop="5dp"
                android:background="@drawable/name_your_task_activ_add1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivAssignTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_assign_to" />

                <TextView
                    android:id="@+id/etAssignTo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/assign_to"
                    android:paddingRight="40sp"
                    android:textColor="#55514f"
                    android:textSize="21dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAddFiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llAssignTo"
                android:layout_marginTop="5dp"
                android:background="@drawable/name_your_task_activ_add1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivAddFiles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_add_files" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAddFiles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingRight="40sp"
                        android:text="Add files"
                        android:textSize="21dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingRight="40sp"
                        android:text="Up to 5 Mb"
                        android:textSize="10sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llDayFrom"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:background="@null"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/more"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/etMore"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:background="@drawable/description_activ_add1"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/more"
                    android:textColor="#55514f"
                    android:textSize="21dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llImportantTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llPlace"
                android:layout_marginTop="5dp"
                android:background="@drawable/name_your_task_activ_add1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivImportantTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_important_task" />

                <TextView
                    android:id="@+id/tvImportantTask"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/important_task"
                    android:textColor="#55514f"
                    android:textSize="21dp" />

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/sbImportantTask"
                    style="@style/SwitchButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:kswBackColor="#ffffff"
                    app:kswBackMeasureRatio="2.2"
                    app:kswThumbHeight="16dp"
                    app:kswThumbWidth="16dp"
                    app:kswTintColor="#1cb83a" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRequiredAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llPlace"
                android:layout_marginTop="5dp"
                android:background="@drawable/name_your_task_activ_add1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivRequiredAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_required_answer" />

                <TextView
                    android:id="@+id/tvRequiredAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/required_answer"
                    android:textColor="#55514f"
                    android:textSize="21dp" />

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/sbRequiredAnswer"
                    style="@style/SwitchButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:kswBackColor="#ffffff"
                    app:kswBackMeasureRatio="2.2"
                    app:kswThumbHeight="16dp"
                    app:kswThumbWidth="16dp"
                    app:kswTintColor="#1cb83a" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llHideAssigned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llPlace"
                android:layout_marginTop="5dp"
                android:background="@drawable/name_your_task_activ_add1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivHideAssigned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_hide_assigned" />

                <TextView
                    android:id="@+id/tvHideAssigned"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/hide_assigned"
                    android:textColor="#55514f"
                    android:textSize="21dp" />

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/sbHideAssigned"
                    style="@style/SwitchButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:kswBackColor="#ffffff"
                    app:kswBackMeasureRatio="2.2"
                    app:kswThumbHeight="16dp"
                    app:kswThumbWidth="16dp"
                    app:kswTintColor="#1cb83a" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llReminder"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginTop="5dp"
                android:background="@drawable/description_activ_add1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivReminder"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/reminder" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Reminder"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tvReminterMinutes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="for 10 minutes"
                        android:textSize="19sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="15sp"
                    app:srcCompat="@drawable/ic_navigate_next_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRepeat"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginTop="5dp"
                android:background="@drawable/description_activ_add1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivRepeat"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/ic_repeat" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Repeat"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tvRepeatDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Every day"
                        android:textSize="19sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="15sp"
                    app:srcCompat="@drawable/ic_navigate_next_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTimezone"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginTop="5dp"
                android:background="@drawable/description_activ_add1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivTimezone"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/ic_timezone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Timezone"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tvTimezone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="(GMT)"
                        android:textSize="19sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivRepeatDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="15sp"
                    app:srcCompat="@drawable/ic_navigate_next_black_24dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</ScrollView>
